.tabla-componentes
	display block
	max-width 100%
	box-shadow 0.5rem 0.5rem 1rem #444
	border-radius 0 0 20px 20px
	&__table
		width 100%
		border-collapse collapse
		border-radius 0 0 20px 20px
		background-color rgba(68,68,68,0.63)
	&__head, &__cell
		min-width 12rem
		padding 1.2rem 0
		text-align center
		font-size 1.5rem
		font-weight 600
	&__head
		position relative
		background-color #005f6b
		color #fff
		text-transform uppercase
		&:nth-of-type(2)
			background-color #008C9E
		&:nth-of-type(3)
			background-color #00B4CC
		&:nth-of-type(4)
			background-color #00DFFC
		&::after
			content ''
			width 100%
			position absolute
			bottom -0.1rem
			left 0
		&:nth-of-type(1)::after
			border-bottom 0.2rem dotted #005f6b
		&:nth-of-type(2)::after
			border-bottom 0.2rem dotted #008C9E
		&:nth-of-type(3)::after
			border-bottom 0.2rem dotted #00B4CC
		&:nth-of-type(4)::after
			border-bottom 0.2rem dotted #00DFFC
	&__cell
		border-left 0.15rem solid #B9B9B9
		border-right 0.15rem solid #B9B9B9
		border-bottom 0.15rem solid #B9B9B9
		background-color #fff
		line-height 1.3
	&__row
		box-shadow inset 0 0 1rem #444
	&__row:last-of-type
		border-radius 0 0 20px 20px
	&__row:last-of-type &__cell
		border-radius 0 0 20px 20px
		box-shadow inset 0 -0.075rem 0 0 #B9B9B9, inset -0.075rem 0 0 0 #B9B9B9, inset 0.075rem 0 0 0 #B9B9B9
		border-left none
		border-right none
		border-bottom none
	&__row:hover &__cell
		background-color #727272
		color #fff
		
