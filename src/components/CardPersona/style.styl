.card-persona
	width 29rem
	height 14.5rem
	background-color #fff
	border-radius 2.5rem
	box-shadow 0.5rem 0.5rem 2rem #222
	&__index
		width 100%
		height 100%
		display flex
		padding 0.6rem 1rem
	&__img-wrapper, &__text
		height 8rem
	&__img-wrapper
		width 50%
		height 100%
		display flex
		justify-content center
		align-items center
	&__gradient
		width 9.5rem
		height 9.5rem
		border-radius 2.5rem
		padding 1.2rem
		background-color #565656
		overflow hidden
		transform rotateZ(-45deg)
	&__background
		width 100%
		height 100%
		display flex
		justify-content center
		overflow hidden
		align-items center
		background-color rgba(255, 255, 255, 0.8)
		border-radius 2rem
	&__img
		width 100%
		height 100%
		border-radius 2rem
		transform rotateZ(45deg)
	&__info
		width 50%
	&__text
		text-align left
		padding 1.5rem 0
	&__name
		font-size 1.5rem
		font-height 2rem
		font-weight 300
		text-decoration underline
	&__description
		font-size 1rem
		font-height 2rem
		text-indent 0.5rem
		position relative
	&__description::before
		content ''
		width 0.25rem
		height 0.25rem
		border-radius 100%
		background-color red
		position absolute
		top 0.3rem
		left 0
	&__rrss
		height 3rem
		display flex
		align-items flex-end
		padding 0 0 0 1.5rem
	&__rrss-item
		width 1.875rem
		height 1.875rem
		margin 0 0.5rem
		&:hover
			filter grayscale(1)
	&--type-1
		.card-persona
			&__name
				text-decoration-color #005f6b
			&__gradient
				background-image linear-gradient(#006c6e,#0395a9 50%, #005f6b 50%)
	&--type-2
		.card-persona
			&__name
				text-decoration-color #9ad400
			&__gradient
				background-image linear-gradient(#a0dc00 ,#d4ee01 50%, #9ad400 50%)
	&--type-3
		.card-persona
			&__name
				text-decoration-color #e50876
			&__gradient
				background-image linear-gradient(#e50876 ,#f40dba 50%, #e50876 50%)
	&--type-4
		.card-persona
			&__name
				text-decoration-color #038bff
			&__gradient
				background-image linear-gradient(#069bff ,#06d1ff 50%, #038bff 50%)
	&--type-5
		.card-persona
			&__name
				text-decoration-color #ff7300
			&__gradient
				background-image linear-gradient(#ff8300 ,#ffb403 50%, #ff7300 50%)
	&--type-6
		.card-persona
			&__name
				text-decoration-color #c4bf01
			&__gradient
				background-image linear-gradient(#c6c501 ,#E6E402 50%, #c4bf01 50%)
