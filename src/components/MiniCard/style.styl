.mini-card
	width 18rem
	padding-bottom 4rem
	cursor pointer
	&__index
		width 100%
		height 5.5rem
		display flex
		justify-content flex-end
		align-items center
		padding 0 2rem
		position relative
		background-color #fff
		border-radius 1.5rem
		box-shadow 0.5rem 0.5rem 1rem #222
	&__img-wrapper
		width 6.5rem
		height 6.5rem
		border-radius 1.5rem
		padding 0.8rem
		position absolute
		top -0.5rem
		left -3rem
		overflow hidden
		transform rotateZ(-45deg)
	&__img-background
		width 100%
		height 100%
		display flex
		justify-content center
		align-items center
		background-color rgba(255, 255, 255, 0.8)
		border-radius 1rem
	&__img
		width 50%
		height 50%
		transform rotateZ(45deg)
	&__name
		text-align right
		font-size 1.5rem
		font-height 2rem
		margin 0
		text-decoration underline
