.menu-nav
	&__svg
		display block
		fill #fff
		&-up, &-down
			transition transform .4s ease-in-out
			transform-origin 50% 50%
		&-middle
			transition transform .4s cubic-bezier(.5,-1,.5,1)
			transform-origin 50% 50%
	&__button
		background-color transparent
		border 0
		position absolute
		top 1rem
		left 1.8rem
		display block
		height 4rem
		width 4rem
		cursor pointer
		padding 0
		z-index 910
		&:focus
			outline 1px solid #fff
		&--active
			.menu-nav__svg-up
				// transform rotate(405deg) translate(0, 29.5%)
				transform rotate(225deg) translate(0, 29.5%)
			.menu-nav__svg-down
				// transform rotate(-405deg) translate(0, -29.5%)
				transform rotate(-225deg) translate(0, -29.5%)
			.menu-nav__svg-middle
				transform scale(0.1)
	&__layout
		pointer-events none
		position absolute
		top 0
		left 0
		height 100%
		width 100%
	&__overlay
		background-color rgba(110,110,110,0.5)
		cursor pointer
		position absolute
		opacity 0
		transition opacity 0.1s ease-in-out
		top 0
		left 0
		height 100%
		width 100%
		z-index 900
	&__content
		background-color #fff
		border-radius 0 3.5rem 3.5rem 0
		box-shadow 0.5rem 0 0 0 #005f6b
		transform translate(-100%,0)
		transition transform 0.3s ease-in-out
		margin-top 5.6rem
		height calc(100% - 5.6rem)
		width 16rem
	&__list
		padding 1rem
	&__list-item
		display block
	&__link
		align-items center
		background-color rgba(0,0,0,0)
		transition background-color 0.1s ease-in-out
		display flex
		padding 0.6rem 0.8rem
		text-decoration none
		&:hover
			.menu-nav__text
				color #005f6b
	&__icon
		margin-right 1rem
		width 1.625rem
		height 1.625rem
		img
			width 100%
			height auto
	&__text
		font-size 1.8rem
		font-family Arial
		color #000
	&__layout--active
		pointer-events auto
		.menu-nav
			&__overlay
				opacity 1
			&__content
				transform translate(0,0)
		