.menu-nav
	pointer-events none
	position absolute
	top 0
	left 0
	height 100%
	width 100%
	&__overlay
		background-color rgba(0,0,0,0.3)
		cursor pointer
		position absolute
		opacity 0
		transition opacity 0.1s ease-in-out
		top 0
		left 0
		height 100%
		width 100%
	&__content
		background-color #fff
		transform translate(-100%,0)
		transition transform 0.2s ease-in-out
		height 100%
		width 20rem
	&__list
		padding 1rem
	&__list-item
		display block
	&__link
		background-color rgba(0,0,0,0)
		transition background-color 0.1s ease-in-out
		display block
		padding 1rem
		text-decoration none
		&:hover
			background-color rgba(90,90,90,0.1)
	&--active
		pointer-events auto
		.menu-nav
			&__overlay
				opacity 1
			&__content
				transform translate(0,0)
		